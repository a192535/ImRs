<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:id="@+id/line1"
        android:orientation="vertical">
        <com.tencent.qcloud.tim.uikit.component.TitleBarLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/title"
            />

        <RelativeLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="10"
            tools:ignore="UselessParent">
            <LinearLayout android:layout_height="100dp"
                android:id="@+id/person"
                android:layout_width="match_parent"
                tools:ignore="NestedWeights"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

<!--                <ImageButton-->
<!--                    android:id="@+id/face_image"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:background="@drawable/faceicon1"/>-->
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/face_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/faceicon1"
                        app:riv_oval="true" />


<!--                <ImageView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:src="@drawable/faceicon"-->
<!--                    />-->

                </FrameLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">
                    <TextView
                        android:background="@null"
                        android:id="@+id/nick_name"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        tools:ignore="Suspicious0dp" />
                    <TextView
                        android:background="@null"
                        android:id="@+id/signature"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        tools:ignore="Suspicious0dp" />
                </LinearLayout>
            </LinearLayout>

            <ListView
                android:id="@+id/my_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/exit_login"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="#F08080"
                android:text="退出登录" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#0000FF"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:ignore="MissingConstraints">
        <include layout="@layout/end" />

    </LinearLayout>

</LinearLayout>